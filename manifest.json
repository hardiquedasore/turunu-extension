{
  "name": "Moriarty AI",
  "description": "Website Security Check",
  "version": "1.0",
  "manifest_version": 3,
 
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_popup": "index.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],

  "permissions": ["activeTab", "scripting"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+T",
        "mac": "Command+T"
      }
    }
  }
}
